<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:gravity="center"

    tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="OTOPARK"
            android:textSize="30dp"
            android:fontFamily="sans-serif-condensed-medium"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="16dp"
            app:layout_constraintBottom_toTopOf="@id/btnEnter"/>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="Otopark sistemi sayesinde, giriş/çıkış saatleriniz ve ücretlendirmeniz otomatik olarak hesaplanır."
            android:gravity="center"
            android:textSize="12dp"
            android:fontFamily="sans-serif-condensed-medium"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="16dp"
            app:layout_constraintBottom_toTopOf="@id/btnEnter"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            tools:ignore="VectorDrawableCompat" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttons"
            android:text="Giriş"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_buttons"
            android:textColor="@color/white"
            android:text="Çıkış"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEnter" />

    <Button
            android:id="@+id/btnCarparkLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="onClick"
            android:background="@drawable/rounded_buttons"
            android:textColor="@color/white"
            android:text="  Otopark'a Git  "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExit" />

</LinearLayout>